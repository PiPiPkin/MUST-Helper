<view class="container"><view class="top-header"><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-btn" bindtap="__e"><text>←</text></view><text class="page-title">{{areaInfo.name+"房源列表"}}</text><view class="header-icons"><text class="icon">•••</text><text class="icon">⦿</text></view></view><view class="search-box"><input type="text" placeholder="搜索小区..." data-event-opts="{{[['input',[['__set_model',['','searchText','$event',[]]]]]]}}" value="{{searchText}}" bindinput="__e"/><text class="search-icon">🔍</text></view><view class="housing-list"><block wx:if="{{loading}}"><view class="loading">加载中...</view></block><block wx:else><block wx:if="{{$root.g0===0}}"><view class="empty">暂无房源数据</view></block><block wx:else><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['navigateToDetail',['$0'],[[['filteredHousings','',index,'id']]]]]]]}}" class="housing-item" bindtap="__e"><view class="housing-name">{{item.$orig.name}}</view><view class="housing-info">{{item.$orig.info}}</view><view class="housing-meta"><text class="rating-value">{{item.g1}}</text><view class="rating-stars"><block wx:for="{{5}}" wx:for-item="n" wx:for-index="__i0__" wx:key="*this"><text class="{{['star',n<=item.g2?'active':'']}}">★</text></block></view><text class="review-count">{{item.$orig.reviewCount+"条评价"}}</text></view></view></block></block></block></view></view>