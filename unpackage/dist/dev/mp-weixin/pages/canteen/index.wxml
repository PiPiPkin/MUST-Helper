<view class="container"><view class="header"><text class="header-title">食堂榜</text></view><view class="content"><view class="search-box"><input type="text" placeholder="搜索食堂..." data-event-opts="{{[['input',[['__set_model',['','searchText','$event',[]]]]]]}}" value="{{searchText}}" bindinput="__e"/><text class="search-icon">🔍</text></view><view class="canteen-list"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['navigateToShops',['$0'],[[['filteredCanteens','',index,'id']]]]]]]}}" class="canteen-item" bindtap="__e"><image class="canteen-image" src="{{item.$orig.image}}" mode="aspectFill"></image><view class="canteen-info"><view class="canteen-header"><text class="canteen-name">{{item.$orig.name}}</text><view class="rating"><text class="rating-score">{{item.g0}}</text><view class="stars"><block wx:for="{{5}}" wx:for-item="n" wx:for-index="__i0__" wx:key="*this"><text class="{{['star',(n<=item.g1)?'filled':'']}}">★</text></block></view></view></view><view class="canteen-meta"><text class="location">{{item.$orig.location}}</text><text class="business-hours">{{item.$orig.businessHours}}</text></view><view class="tags"><block wx:for="{{item.$orig.tags}}" wx:for-item="tag" wx:for-index="tagIndex" wx:key="tagIndex"><text class="tag">{{tag}}</text></block></view></view></view></block></view></view></view>