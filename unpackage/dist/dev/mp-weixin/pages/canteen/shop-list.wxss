
.container {
	min-height: 100vh;
	background-color: #f5f5f5;
}
.header {
	background-color: #3498db;
	padding: 20rpx;
	display: flex;
	align-items: center;
}
.back-btn {
	color: #ffffff;
	font-size: 36rpx;
	padding: 0 20rpx;
}
.header-title {
	flex: 1;
	color: #ffffff;
	font-size: 36rpx;
	font-weight: bold;
	text-align: center;
}
.content {
	padding: 20rpx;
}
.search-box {
	position: relative;
	margin-bottom: 20rpx;
}
.search-box input {
	width: 100%;
	height: 80rpx;
	background-color: #ffffff;
	border-radius: 40rpx;
	padding: 0 80rpx 0 30rpx;
	font-size: 28rpx;
}
.search-icon {
	position: absolute;
	right: 30rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	font-size: 32rpx;
}
.shop-list {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.shop-item {
	display: flex;
	background-color: #ffffff;
	border-radius: 16rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.shop-image {
	width: 200rpx;
	height: 200rpx;
}
.shop-info {
	flex: 1;
	padding: 20rpx;
}
.shop-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10rpx;
}
.rating-info {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10rpx;
}
.price, .monthly-sales {
	font-size: 24rpx;
	color: #666666;
}
.rating-details {
	display: flex;
	gap: 20rpx;
	margin-top: 10rpx;
}
.rating-item {
	display: flex;
	align-items: center;
	gap: 10rpx;
}
.rating-label {
	font-size: 24rpx;
	color: #666666;
}
.rating-value {
	font-size: 24rpx;
	color: #f39c12;
	font-weight: bold;
}
.stars {
	display: flex;
}
.star {
	color: #dddddd;
	font-size: 24rpx;
}
.star.filled {
	color: #f39c12;
}
.shop-meta {
	display: flex;
	gap: 20rpx;
	margin-bottom: 10rpx;
}
.tags {
	display: flex;
	flex-wrap: wrap;
	gap: 10rpx;
}
.tag {
	font-size: 24rpx;
	color: #3498db;
	background-color: #eef7fd;
	padding: 4rpx 12rpx;
	border-radius: 6rpx;
}

