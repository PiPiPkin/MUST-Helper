
.container {
	min-height: 100vh;
	background-color: #f5f5f5;
}
.top-header {
	background-color: #3498db;
	padding: 20rpx 30rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.back-btn {
	color: #ffffff;
	font-size: 36rpx;
}
.page-title {
	color: #ffffff;
	font-size: 36rpx;
	font-weight: bold;
	flex: 1;
	text-align: center;
}
.privacy-content {
	padding: 30rpx;
}
.privacy-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333333;
	text-align: center;
	margin-bottom: 10rpx;
}
.privacy-date {
	font-size: 24rpx;
	color: #999999;
	text-align: center;
	margin-bottom: 30rpx;
}
.privacy-intro {
	font-size: 28rpx;
	color: #666666;
	line-height: 1.8;
	margin-bottom: 30rpx;
}
.privacy-section {
	margin-bottom: 30rpx;
}
.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 20rpx;
}
.section-content {
	font-size: 28rpx;
	color: #666666;
	line-height: 1.8;
}
.section-content text {
	display: block;
	margin-bottom: 15rpx;
}

