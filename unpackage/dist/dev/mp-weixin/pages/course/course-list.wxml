<view class="container"><view class="header"><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-btn" bindtap="__e"><text>←</text></view><text class="header-title">{{departmentInfo.name}}</text></view><view class="content"><view class="search-box"><input type="text" placeholder="搜索课程..." data-event-opts="{{[['input',[['__set_model',['','searchText','$event',[]]],['filterCourses',['$event']]]]]}}" value="{{searchText}}" bindinput="__e"/><text class="search-icon">🔍</text></view><view class="course-list"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['navigateToCourseDetail',['$0'],[[['filteredCourses','',index,'id']]]]]]]}}" class="course-item" bindtap="__e"><view class="course-info"><view class="course-header"><text class="course-name">{{item.$orig.name}}</text><view class="rating"><text class="rating-score">{{item.g0}}</text><view class="stars"><block wx:for="{{5}}" wx:for-item="n" wx:for-index="__i0__" wx:key="*this"><text class="{{['star',(n<=item.g1)?'filled':'']}}">★</text></block></view></view></view><view class="course-code">{{item.$orig.code}}</view><view class="course-meta"><text class="credits">{{item.$orig.credits+"学分"}}</text><text class="review-count">{{item.$orig.reviewCount+"条评价"}}</text></view></view></view></block></view></view></view>