<view class="container"><view class="header" style="{{'padding-top:'+(statusBarHeight+'px')+';'}}"><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-btn" bindtap="__e"><text>←</text></view><text class="header-title">{{collegeTitle+"课程"}}</text></view><view class="course-list"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['goToCourseDetail',['$0'],[[['courseList','',index]]]]]]]}}" class="course-item" bindtap="__e"><view class="course-info"><text class="course-name">{{item.$orig.name}}</text><text class="course-code">{{item.$orig.code}}</text><view class="course-rating"><text class="rating-value">{{item.$orig.rating}}</text><view class="rating-stars"><block wx:for="{{5}}" wx:for-item="n" wx:for-index="__i0__" wx:key="*this"><text class="{{['star',n<=item.g0?'active':'']}}">★</text></block></view><text class="review-count">{{item.$orig.reviewCount+"条评价"}}</text></view></view></view></block></view></view>