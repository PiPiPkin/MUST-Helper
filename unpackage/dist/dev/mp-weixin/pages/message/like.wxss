
.container {
	min-height: 100vh;
	background-color: #f5f5f5;
	padding-bottom: 30rpx;
}
.top-header {
	background-color: #3498db;
	padding: 20rpx 30rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.back-btn {
	color: #ffffff;
	font-size: 36rpx;
}
.page-title {
	color: #ffffff;
	font-size: 36rpx;
	font-weight: bold;
	flex: 1;
	text-align: center;
}
.header-icons {
	display: flex;
	gap: 20rpx;
}
.icon {
	color: #ffffff;
	font-size: 32rpx;
}
.like-list {
	padding: 20rpx;
}
.like-item {
	background-color: #ffffff;
	border-radius: 12rpx;
	margin-bottom: 20rpx;
	padding: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
	display: flex;
	align-items: flex-start;
}
.like-avatar {
	font-size: 40rpx;
	margin-right: 20rpx;
	background-color: #f0f0f0;
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.like-content {
	flex: 1;
}
.like-user {
	font-size: 30rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 10rpx;
}
.like-action {
	font-size: 28rpx;
	color: #666666;
	margin-bottom: 10rpx;
	display: flex;
	align-items: center;
}
.like-icon {
	color: #e74c3c;
	margin-right: 10rpx;
	font-size: 32rpx;
}
.like-source {
	font-size: 26rpx;
	color: #3498db;
	margin-bottom: 6rpx;
	padding: 6rpx 0;
}
.like-time {
	font-size: 24rpx;
	color: #999999;
}
.empty-tip {
	text-align: center;
	padding: 40rpx;
	color: #999999;
	font-size: 28rpx;
}

