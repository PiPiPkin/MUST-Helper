
.container {
	min-height: 100vh;
	background-color: #f5f5f5;
	padding-bottom: 30rpx;
}
.top-header {
	background-color: #3498db;
	padding: 20rpx 30rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.back-btn {
	color: #ffffff;
	font-size: 36rpx;
}
.page-title {
	color: #ffffff;
	font-size: 36rpx;
	font-weight: bold;
	flex: 1;
	text-align: center;
}
.header-icons {
	display: flex;
	gap: 20rpx;
}
.icon {
	color: #ffffff;
	font-size: 32rpx;
}
.notification-list {
	padding: 20rpx;
}
.notification-item {
	background-color: #ffffff;
	border-radius: 12rpx;
	margin-bottom: 20rpx;
	padding: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
	display: flex;
	align-items: flex-start;
}
.notification-icon {
	font-size: 40rpx;
	margin-right: 20rpx;
	padding: 10rpx;
	border-radius: 50%;
}
.system {
	background-color: #3498db;
	color: #ffffff;
}
.activity {
	background-color: #f39c12;
	color: #ffffff;
}
.update {
	background-color: #2ecc71;
	color: #ffffff;
}
.notification-content {
	flex: 1;
}
.notification-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 10rpx;
}
.notification-desc {
	font-size: 28rpx;
	color: #666666;
	margin-bottom: 10rpx;
	line-height: 1.5;
}
.notification-time {
	font-size: 24rpx;
	color: #999999;
}
.empty-tip {
	text-align: center;
	padding: 40rpx;
	color: #999999;
	font-size: 28rpx;
}

